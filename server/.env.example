# Server
PORT=4000
NODE_ENV=development
# Comma-separated list
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# JWT Configuration (IMPORTANT: Change in production!)
JWT_SECRET=your-super-secure-jwt-secret-change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
SALT_ROUNDS=12
RATE_LIMIT_MAX=100

# Encryption (32-byte hex string for AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-me-in-production

# Security Headers
HSTS_MAX_AGE=31536000

# Logging
LOG_LEVEL=info

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pds
DB_USER=postgres
DB_PASS=postgres
DB_SSL=false

# Admin bootstrap (used for seeding on first run)
ADMIN_EMAIL=admin@pds.local
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin

# Control flags (prod defaults are safe)
# Allow auto-create database (true in dev, false in prod recommended)
ALLOW_DB_CREATE=true
# Seed admin (explicitly enable when you need to bootstrap)
SEED_ADMIN=false
